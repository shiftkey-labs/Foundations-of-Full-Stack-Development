# Server Configuration
PORT=8000

# MongoDB Connection
# Get this from MongoDB Atlas: https://cloud.mongodb.com/
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority

# Or from local MongoDB Instance
# Format: mongodb://localhost:27017
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret
# Generate a random string for this (e.g., use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# NEVER share this or commit it to GitHub!
JWT_SECRET=your_super_secret_random_string_here

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# make sure to create a .env file in the root of the server folder
# and copy the contents of the sample.env file into it
# and fill in the values